<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="1dp"
    android:background="@android:color/white">
    <!--whole block-->
    <!--TODO:Fix padding and make the text closer-->
    <!--TODO:Fix generic layout. The border line need to be thicker-->
    <!--TODO: Implement material design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0.1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Image-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:src="@drawable/food_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="vertical"
                android:padding="4dp">
                <!--Left side-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/food_text_view"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="@string/default_food"
                        android:elegantTextHeight="true"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/day_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_location"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <!--Right side-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/location_text_view"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="@string/default_food"
                        android:elegantTextHeight="true"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_time"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/event_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:text="@string/default_event"
                    android:textStyle="italic"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>